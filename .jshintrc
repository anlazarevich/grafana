{
  "browser": true,

  "bitwise":false,
  "curly": true,
  "eqnull": true,
  "strict": true,
  "devel": true,
  "eqeqeq": true,
  "forin": false,
  "immed": true,
  "supernew": true,
  "expr": true,
  "indent": 2,
  "latedef": false,
  /* remove warning because sigma constructor is in lowercase*/
  "newcap": false,
  "noarg": true,
  "noempty": true,
  "undef": true,
  "boss": true,
  "trailing": true,
  "laxbreak": true,
  "laxcomma": true,
  "sub": true,
  "unused": true,
  "maxdepth": 6,
  "maxlen": 140,

  "globals": {
    "System": true,
    "Promise": true,
    "define": true,
    "require": true,
    "Chromath": false,
    "setImmediate": true
  }
}
